@model IEnumerable<DapperDemo.Models.Company>

@{
    ViewData["Title"] = "Companies";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">Company List</h2>
        <a asp-action="Create" class="btn btn-outline-primary">+ Create New</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Address)</th>
                        <th>@Html.DisplayNameFor(model => model.First().City)</th>
                        <th>@Html.DisplayNameFor(model => model.First().State)</th>
                        <th>@Html.DisplayNameFor(model => model.First().PostalCode)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Address</td>
                            <td>@item.City</td>
                            <td>@item.State</td>
                            <td>@item.PostalCode</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.CompanyId" class="text-decoration-none me-2">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.CompanyId" class="text-decoration-none me-2">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.CompanyId" class="text-danger text-decoration-none">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<style>
    .table th, .table td {
        vertical-align: middle;
    }
</style>
